<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F9"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="BEM-VINDO!"
        android:textColor="#09090B"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/mLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo_bank" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:boxBackgroundMode="outline"
        android:boxCornerRadiusBottomStart="24dp"
        android:boxCornerRadiusBottomEnd="24dp"
        android:boxCornerRadiusTopEnd="24dp"
        android:boxCornerRadiusTopStart="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:boxBackgroundMode="outline"
        android:boxCornerRadiusTopStart="24dp"
        android:boxCornerRadiusTopEnd="24dp"
        android:boxCornerRadiusBottomStart="24dp"
        android:boxCornerRadiusBottomEnd="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Esqueceu a senha?"
        android:textColor="#0066cc" />

    <Button
        android:id="@+id/mLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#F8FB91B5"
        android:text="Log in" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cadastre-se"
        android:textColor="#0066cc" />


</LinearLayout>